<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CoolScreen Lab"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Main Presets"
            android:textColor="#AAAAAA"
            android:layout_marginBottom="8dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2">

            <Button
                android:id="@+id/btnBase"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="БАЗА"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnCool"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="COOL"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnCoolPlus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="COOL+"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnCoolG"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="COOL-G"
                android:layout_margin="4dp"/>
        </GridLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Experimental"
            android:textColor="#AAAAAA"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">

            <Button
                android:id="@+id/btnExp1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="EXP 1"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnExp2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="EXP 2"
                android:layout_margin="4dp"/>
             
            <Button
                android:id="@+id/btnExp3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="EXP 3"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnExp4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="EXP 4"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnExp5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="EXP 5"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnExp6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="EXP 6"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnExp7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="EXP 7"
                android:layout_margin="4dp"/>

        </GridLayout>

        <Button
            android:id="@+id/btnOff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#FF4444"
            android:text="OFF"
            android:textStyle="bold"/>

    </LinearLayout>
</ScrollView>
