<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.example.coolscreen">
  <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

<!-- Необходимы разрешения на работу сервиса и надлежащие службы -->
<application
    android:label="CoolScreen"
    android:icon="@mipmap/ic_launcher"
    android:allowBackup="true"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar">
    <activity
        android:name=".MainActivity"
        android:exported="true"
        android:label="Cool Screen Control">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

    <!-- Сервис-оверлей -->
    <service
        android:name=".FilterService"
        android:exported="false"
        android:foregroundServiceType="systemAlertWindow"
        android:enabled="true" />

    <!-- При необходимости можно определить приемники/потребителей -->
</application>
